<% @articles.each do |article| %>
  <div class="article text-justify">
    <h3><%= link_to article.title, article_path(article) %>
    <%= link_to "", edit_article_path(article), class: "fas fa-pencil-alt small-size" %>
    <%= link_to "", article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete article?" }, class: "fas fa-trash-alt small-size" %>
    </h3>
    <% if article.content.length < 200 %>
      <p><%= article.content%> </p>
    <% else %>
      <p><%= article.content[0..200]%> (...) </p>
    <%end  %>
  </div>
<% end %>
